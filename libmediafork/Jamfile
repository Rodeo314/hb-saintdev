Library libmediafork : $(LIBMEDIAFORK_SRC) ;

ObjectCcFlags $(LIBMEDIAFORK_SRC) : -I$(TOP)/contrib/include ;
ObjectDefines $(LIBMEDIAFORK_SRC) : __LIBMEDIAFORK__ ;
ObjectC++Flags $(LIBMEDIAFORK_SRC) : -I$(TOP)/contrib/include ;
