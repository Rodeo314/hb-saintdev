muxavi.c enclame.c muxogm.c encvorbis.c dvd.c ;

Library libhb : $(LIBHB_SRC) ;

ObjectCcFlags $(LIBHB_SRC) : -I$(TOP)/contrib/include ;
ObjectDefines $(LIBHB_SRC) : __LIBHB__ ;
