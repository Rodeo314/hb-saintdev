    cd `dirname $(>)` && CONTRIB=`pwd` &&
    rm -rf faac && tar xzf faac.tar.gz && cd faac &&
    ./configure --prefix=$CONTRIB --enable-shared --enable-static &&
    make && make install &&
    strip -S $CONTRIB/lib/libfaac.a
}
